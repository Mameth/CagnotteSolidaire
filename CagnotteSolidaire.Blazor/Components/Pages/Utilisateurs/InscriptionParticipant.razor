@page "/inscription-participant"
@using CagnotteSolidaire.Blazor.Models
@using CagnotteSolidaire.Blazor.Services
@inject UtilisateurApiService UtilisateurService
@inject NavigationManager Navigation

<PageTitle>Inscription Participant</PageTitle>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow border-0">
                <div class="card-header bg-success text-white text-center py-3">
                    <h3 class="mb-0">Devenir Donateur</h3>
                </div>
                <div class="card-body p-4">
                    <EditForm Model="model" OnValidSubmit="Inscrire" FormName="inscriptionPart">
                        <DataAnnotationsValidator />
                        
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Nom</label>
                                <InputText @bind-Value="model.Nom" class="form-control" />
                                <ValidationMessage For="@(() => model.Nom)" />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Prénom</label>
                                <InputText @bind-Value="model.Prenom" class="form-control" />
                                <ValidationMessage For="@(() => model.Prenom)" />
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Email</label>
                            <InputText @bind-Value="model.Email" class="form-control" type="email" />
                            <ValidationMessage For="@(() => model.Email)" />
                        </div>

                        <div class="mb-4">
                            <label class="form-label">Mot de passe</label>
                            <InputText @bind-Value="model.MotDePasse" class="form-control" type="password" />
                            <ValidationMessage For="@(() => model.MotDePasse)" />
                        </div>

                        <button type="submit" class="btn btn-success w-100 py-2">Créer mon compte</button>
                    </EditForm>

                    @if (!string.IsNullOrEmpty(errorMessage))
                    {
                        <div class="alert alert-danger mt-3">@errorMessage</div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    [SupplyParameterFromForm]
    private InscriptionParticipantModel model { get; set; } = new();
    private string? errorMessage;

    private async Task Inscrire()
    {
        errorMessage = null;
        try
        {
            await UtilisateurService.InscrireParticipant(model);
            // Succès -> On envoie vers le login
            Navigation.NavigateTo("/login");
        }
        catch (Exception ex)
        {
            errorMessage = "Erreur : " + ex.Message;
        }
    }
}