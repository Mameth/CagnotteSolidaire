@page "/mes-cagnottes"
@using CagnotteSolidaire.Blazor.Services
@using CagnotteSolidaire.Blazor.Models
@inject CagnotteApiService CagnotteService
@inject NavigationManager Navigation
@rendermode InteractiveServer

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3>Mes Cagnottes</h3>
        <button class="btn btn-primary" @onclick="AllerVersCreation">
            + Nouvelle Cagnotte
        </button>
    </div>

    @if (cagnottes == null)
    {
        <p>Chargement en cours...</p>
    }
    else if (cagnottes.Count == 0)
    {
        <div class="alert alert-info">
            Vous n'avez pas encore créé de cagnotte. Lancez-vous !
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var c in cagnottes)
            {
                <div class="col-md-4 mb-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title">@c.Titre</h5>
                            <p class="card-text text-muted">@c.Description</p>
                            
                            <div class="mt-3">
                                <div class="d-flex justify-content-between">
                                    <span>Progression</span>
                                    <strong>@c.MontantActuel € / @c.Objectif €</strong>
                                </div>
                                <div class="progress mt-1">
                                    <div class="progress-bar bg-success" 
                                         role="progressbar" 
                                         style="width: @(CalculerPourcentage(c))%">
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="card-footer bg-white border-top-0 text-end">
                            <span class="badge bg-secondary">@c.Statut</span>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@code {
    private List<CagnotteDTO>? cagnottes;

    protected override async Task OnInitializedAsync()
    {
        cagnottes = await CagnotteService.GetMesCagnottes();
    }

    private void AllerVersCreation()
    {
        Navigation.NavigateTo("/creer-cagnotte");
    }

    private int CalculerPourcentage(CagnotteDTO c)
    {
        if (c.Objectif == 0) return 0;
        var p = (int)((c.MontantActuel / c.Objectif) * 100);
        return p > 100 ? 100 : p;
    }
}